{
  "extends": "@loci/config/typescript",
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolvePackageJsonExports": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "incremental": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": { "@/*": ["./src/*"] },
  },
}
